<div class="page-width">
<div class="wrapped-collectin">
  <div class="links-top">
    <a href="{{ routes.root_url }}" class="first-child">Home</a>
    <div class="rigtt-arrow">{% include 'links-arrow' %}</div>
    <a href="/collections" class="end-link orange">Collections</a>
  </div>
  <div class="name-page-ff">
    All Collections
  </div>
  <div class="wrapped-show-col">
  {% for collection in collections %}
    {% if collection.title == 'featured-products' or collection.all_products_count == 0 %}
      {% continue %}
    {% else %}
      {% assign name-col = collection.title %}
        <div class="once-coll">
          <div class="wrap-top-col">
            <div class="title-collection-ff">{{ collection.title }}</div>
            <div class="lin-coll">
              <a href="{{ collection.url }}"><div class="wrap-link-right">Explore<img src="{{ 'right-arrow.png' | asset_img_url: 'medium' }}" alt="right-arrow"></div></a>
            </div>
          </div>
          <div class="wrap-item-col">
            {% for product in collection.products limit:4 %}
            <a href="{{product.url}}" class="item-feat daily">
                <img src="{{ product.featured_image | img_url: 'master' }}" alt="product">
                <h3>{{ product.title }}</h3>
                <h4>{{ product.price | money }}</h4>
                <div class="but-add-cart">
                    {% form 'product', product, class:form_classes, novalidate: 'novalidate', data-product-form: '' %}                            
                    <select name="id" id="ProductSelect-{{ section.id }}" class="product-form__variants no-js">
                      {% for variant in product.variants %}
                        {% if variant.available %}
                          <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                            {{ variant.title }}
                          </option>
                        {% else %}
                          <option disabled="disabled">{{ variant.title }} - {{ 'products.product.sold_out' | t }}</option>
                        {% endif %}
                      {% endfor %}
                    </select>
        
                    <div class="product-form__error-message-wrapper product-form__error-message-wrapper--hidden" data-error-message-wrapper role="alert">
                      {% include 'icon-error' %} <span class="product-form__error-message" data-error-message>{{ 'products.product.quantity_minimum_message' | t }}</span>
                    </div>
        
                    <div class="wrapped-button-cart">
                      <button type="submit" name="add"
                        {% unless product.available %} aria-disabled="true"{% endunless %}
                        aria-label="{% unless product.available %}{{ 'products.product.sold_out' | t }}{% else %}{{ 'products.product.add_to_cart' | t }}{% endunless %}"
                        class="btn product-form__cart-submit"
                        data-add-to-cart>
                        <span data-add-to-cart-text>
                          {% unless product.available %}
                            {{ 'products.product.sold_out' | t }}
                          {% else %}
                            {{ 'products.product.add_to_cart' | t }}
                          {% endunless %}
                        </span>
                        <span class="hide" data-loader>
                          {% include 'icon-spinner' %}
                        </span>
                      </button>
                      {% if section.settings.enable_payment_button %}
                        {{ form | payment_button }}
                      {% endif %}
                    </div>
                  {% endform %}
                </div>
        </a> 
            {% endfor %}
          </div>
          </div>
    {% endif %}
  {% endfor %}
</div>
</div>
 
 
</div>



